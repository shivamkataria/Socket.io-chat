<!doctype html>
<html>
        <script src="/socket.io/socket.io.js"></script>
        <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
        <script>
        $(function () {
                var socket = io();
                $('#form').submit(function(e)
                {
                    e.preventDefault()
                    socket.emit('chat message', $('#m').val());
                    $('#m').val('');
                    return false;
                });

                socket.on('chat message', function(msg){
                $('.messages').append($('<li>').text(msg));
                console.log(msg);
                });
            });
        </script>
  <head>
    <title>SENSEnuts eI</title>
    <style>
      * { margin: 0; padding: 0; box-sizing: border-box;}
      body { font: 13px Helvetica, Arial; }
      form { float: left;background:black; padding: 3px; bottom: 0; width: 100%; }
      form input { border: 0; padding: 10px; width: 100%; margin-right: .5%;}
      form button { width: 100%; background:cyan; border: none; padding: 10px; }
      
      .messages { list-style-type: none; margin: 0; padding: 0; }
      .messages li { padding: 10px 10px; }
      .messages li:nth-child(odd) { background: khaki;}

    .panel {
        border: 5px solid black;
        padding: 20px;
        margin: 20px;
        height: 520px;
        }
    
    .mainheader {
        text-align: center;
        border: 5px solid black;
        padding: 5px;
        margin: 20px;
        }
    .content {
        overflow-y: scroll;
        width: 100%;
        height: 400px;
        border: 5px solid yellow;
        padding: 1px;
        }

    </style>
  </head>
  <body>
      <div class="mainheader">
           <font size="6" color="orange"> <b>Socket.io Messenger</b> </font>
      </div>
            <div class="panel">
                <div class="content">
                    <ul class="messages"></ul> 
                </div>
                    <form id='form' >
                        <input id="m" placeholder="sender type here..." autocomplete="off" /><button>Send</button>
                    </form>    
            </div>
        </div>
  </body>
</html>